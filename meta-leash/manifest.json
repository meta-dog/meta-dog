{
  "name": "Meta-Dog Leash",
  "description": "Navigate to a Meta App via the Oculus store and, if there is a referral available, you will be able to request it immediately!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_popup": "views/intro.html",
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.oculus.com/experiences/rift/*",
        "https://*.oculus.com/experiences/quest/*"
      ],
      "js": ["scripts/app.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/app.js"],
      "matches": []
    }
  ]
}
